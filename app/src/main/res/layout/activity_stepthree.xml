<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_for_all_screens"
    >


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <Button
        android:id="@+id/first"
        android:layout_width="290dp"
        android:layout_height="270dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_1"
        android:text="Кто я?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rellay" />


    <Button
        android:id="@+id/last"
        android:layout_width="290dp"
        android:layout_height="270dp"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="30sp"

        android:autoSizeTextType="uniform"
        android:background="@drawable/button_2"
        android:text="Где я?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rellay" />

    <Button
        android:id="@+id/Next_Game"
        android:layout_width="178dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Новая игра"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_1"/>

    <RelativeLayout
        android:id="@+id/rellay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"

        android:layout_marginTop="30dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/justtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер игрока"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Name_of_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/justtext"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="Имя"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/justtext"
            android:text="1"
            android:textSize="24sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


